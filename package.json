{
  "name": "vibecheck",
  "version": "1.0.0",
  "description": "Cross-repo static analysis + actionable GitHub issue generator for AI agents",
  "type": "module",
  "bin": {
    "vibecheck": "./bin/cli.js"
  },
  "files": [
    "bin/",
    "src/",
    "action.yml",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "git rev-parse --git-dir > /dev/null 2>&1 && git config core.hooksPath .githooks || true",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src/",
    "build-sarif": "tsx src/output/build-sarif.ts",
    "build-llm-json": "tsx src/output/build-llm-json.ts",
    "create-issues": "tsx src/github/sarif-to-issues.ts",
    "repo-detect": "tsx src/core/repo-detect.ts",
    "analyze": "tsx src/core/analyze.ts"
  },
  "dependencies": {
    "@octokit/rest": "^22.0.1",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^25.0.8",
    "@vitest/coverage-v8": "^4.0.17",
    "dependency-cruiser": "^17.0.0",
    "eslint": "^9.0.0",
    "globals": "^17.0.0",
    "jscpd": "^4.0.7",
    "knip": "^5.80.2",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.53.0",
    "vitest": "^4.0.17"
  },
  "packageManager": "pnpm@9.0.0",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/WolffM/vibecheck.git"
  },
  "homepage": "https://github.com/WolffM/vibecheck#readme",
  "bugs": {
    "url": "https://github.com/WolffM/vibecheck/issues"
  },
  "author": "WolffM",
  "keywords": [
    "static-analysis",
    "github-actions",
    "trunk",
    "sarif",
    "code-quality",
    "ai-agent",
    "linter",
    "cli"
  ]
}
